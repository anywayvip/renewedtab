{
	"name": "renewedtab",
	"version": "1.3.0",
	"description": "A customisable home page for your web browser",
	"main": "webpack.config.js",
	"sideEffects": false,
	"scripts": {
		"build": "npm run build:app && npm run build:server",
		"build:app": "npm run trans:compile && webpack",
		"build:server": "tsc --outDir dist/server --project tsconfig.server.json",
		"start": "concurrently \"npm run start:app\" \"npm run start:server\" ",
		"start:app": "npm run trans:compile && concurrently \"webpack --watch\" \"live-server dist/webext/app --port=8085\"",
		"start:server": "concurrently \"tsc --preserveWatchOutput --watch --outDir dist/server --project tsconfig.server.json\" \"NODE_PATH=dist/server nodemon dist/server/server.js\"",
		"start:firefox": "npm run trans:compile && concurrently \"webpack --watch\" \"web-ext run -t firefox-desktop -s ./dist/webext/ -i app/manifest.json -i app/index.html \" \"npm run start:server\"",
		"start:chrome": "npm run trans:compile && concurrently \"webpack --watch\" \"web-ext run -t chromium -s ./dist/webext/ -i app/manifest.json -i app/index.html\" \"npm run start:server\"",
		"package:webext": "npm run build:app && web-ext build -s ./dist/webext/ -i app/manifest.json -i app/index.html -n renewedtab.zip",
		"lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
		"test": "NODE_PATH=src mocha -r ts-node/register tests/**/*.test.ts",
		"coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
		"trans:extract": "formatjs extract 'src/app/**/*.ts*' --out-file src/app/locale/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]' && node utils/update_translations.js",
		"trans:compile": "node utils/compile_translations.js"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@gitlab.com/rubenwardy/renewedtab.git"
	},
	"author": "rubenwardy",
	"license": "GPLv3+",
	"bugs": {
		"url": "https://gitlab.com/rubenwardy/renewedtab/issues"
	},
	"homepage": "https://gitlab.com/rubenwardy/renewedtab#readme",
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.34",
		"@fortawesome/free-solid-svg-icons": "^5.15.2",
		"@types/express": "^4.17.11",
		"@types/node-fetch": "^2.5.8",
		"@types/react": "^17.0.2",
		"@types/react-dom": "^17.0.1",
		"@types/react-grid-layout": "^1.1.1",
		"@types/react-radio-group": "^3.0.2",
		"copy-webpack-plugin": "^7.0.0",
		"css-loader": "^5.1.1",
		"express": "^4.17.1",
		"html-webpack-plugin": "^5.2.0",
		"mini-css-extract-plugin": "^1.3.9",
		"njwt": "^1.0.0",
		"node-fetch": "^2.6.1",
		"node-sass": "^5.0.0",
		"nodemon": "^2.0.7",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-grid-layout": "^1.2.2",
		"react-intl": "^5.15.7",
		"react-radio-group": "^3.0.3",
		"sass-loader": "^11.0.1",
		"ts-loader": "^8.0.17",
		"typescript": "^4.2.2",
		"webpack": "^5.24.2",
		"webpack-cli": "^4.5.0"
	},
	"devDependencies": {
		"@formatjs/cli": "^4.2.6",
		"@types/chai": "^4.2.15",
		"@types/mocha": "^8.2.1",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"chai": "^4.3.3",
		"concurrently": "^6.0.0",
		"eslint": "^7.14.0",
		"eslint-plugin-react": "^7.23.2",
		"live-server": "^1.2.1",
		"mocha": "^8.3.1",
		"ts-node": "^9.1.1",
		"web-ext": "^5.5.0",
		"web-ext-types": "^3.2.1",
		"webextension-polyfill-ts": "^0.25.0"
	}
}
