{
	"name": "homescreen",
	"version": "0.1.0",
	"description": "A customisable home page for your web browser",
	"main": "webpack.config.js",
	"scripts": {
		"build": "npm run build:app && npm run build:server",
		"build:app": "webpack",
		"build:server": "tsc --outDir dist/server --project tsconfig.server.json",
		"start": "concurrently \"npm run start:app\" \"npm run start:server\" ",
		"start:app": "concurrently \"webpack --watch\" \"live-server dist/webext/app --port=8085\"",
		"start:server": "concurrently \"tsc --preserveWatchOutput --watch --outDir dist/server --project tsconfig.server.json\" \"NODE_PATH=dist/server nodemon dist/server/server.js\"",
		"start:firefox": "concurrently \"webpack --watch\" \"web-ext run -s ./dist/webext/ -i ./dist/webext/app/manifest.json \" \"npm run start:server\"",
		"package:firefox": "npm run build:app && web-ext build -s ./dist/webext/ -i ./dist/webext/app/manifest.json -n homescreen.zip",
		"test": "NODE_PATH=src mocha -r ts-node/register tests/**/*.test.ts",
		"coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@gitlab.com/rubenwardy/homescreen.git"
	},
	"author": "rubenwardy",
	"license": "GPLv3+",
	"bugs": {
		"url": "https://gitlab.com/rubenwardy/homescreen/issues"
	},
	"homepage": "https://gitlab.com/rubenwardy/homescreen#readme",
	"dependencies": {
		"@fortawesome/fontawesome-free": "^5.15.2",
		"@types/express": "^4.17.11",
		"@types/node-fetch": "^2.5.8",
		"@types/react": "^17.0.2",
		"@types/react-dom": "^17.0.1",
		"@types/react-grid-layout": "^1.1.1",
		"@types/react-radio-group": "^3.0.2",
		"copy-webpack-plugin": "^7.0.0",
		"css-loader": "^5.1.1",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"html-webpack-plugin": "^5.2.0",
		"mini-css-extract-plugin": "^1.3.9",
		"node-fetch": "^2.6.1",
		"node-sass": "^5.0.0",
		"nodemon": "^2.0.7",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-grid-layout": "^1.2.2",
		"react-radio-group": "^3.0.3",
		"sass-loader": "^11.0.1",
		"ts-loader": "^8.0.17",
		"typescript": "^4.2.2",
		"webpack": "^5.24.2",
		"webpack-cli": "^4.5.0"
	},
	"devDependencies": {
		"@types/chai": "^4.2.15",
		"@types/mocha": "^8.2.1",
		"chai": "^4.3.3",
		"concurrently": "^6.0.0",
		"live-server": "^1.2.1",
		"mocha": "^8.3.1",
		"ts-node": "^9.1.1",
		"web-ext": "^5.5.0",
		"web-ext-types": "^3.2.1",
		"webextension-polyfill-ts": "^0.25.0"
	}
}
